@model List<Dastone.Entities.Citum>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" >
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Calendario</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Inicio</a></li>
                            <li class="breadcrumb-item active">Calendario</li>
                        </ol>
                    </div><!--end col-->
                    <div class="col-auto align-self-center">
                        <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                            <span class="day-name" id="Day_Name">Today:</span>&nbsp;
                            <span class="" id="Select_date">Jan 11</span>
                            <i data-feather="calendar" class="align-self-center icon-xs ms-1"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-primary">
                            <i data-feather="download" class="align-self-center icon-xs"></i>
                        </a>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- end page title end breadcrumb -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-3">
            <div class="card report-card">
                <div class="card-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col">
                            <p class="text-dark mb-1 font-weight-semibold">Ordenes de Trabajo</p>
                            <h3 class="m-0">@ViewBag.NumeroDeOrdenes</h3>
                        </div>
                        <div class="col-auto align-self-center">
                            <div class="report-main-icon bg-light-alt">
                                <i data-feather="layers" class="align-self-center text-muted icon-md"></i>
                            </div>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!--end col-->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card">
                <div class="card-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col">
                            <p class="text-dark mb-1 font-weight-semibold">Citas</p>
                            <h3 class="m-0">@ViewBag.NumeroDeCitas</h3>
                        </div>
                        <div class="col-auto align-self-center">
                            <div class="report-main-icon bg-light-alt">
                                <i data-feather="check-square" class="align-self-center text-muted icon-md"></i>
                            </div>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!--end col-->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card">
                <div class="card-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col">
                            <p class="text-dark mb-1 font-weight-semibold">Total Clientes</p>
                            <h3 class="m-0">@ViewBag.NumeroDeTablas</h3>
                        </div>
                        <div class="col-auto align-self-center">
                            <div class="report-main-icon bg-light-alt">
                                <i data-feather="clock" class="align-self-center text-muted icon-md"></i>
                            </div>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!--end col-->

        <div class="row">
        <div class="col-lg">
            <div class="dash-datepick mb-3">
                <input type="hidden" id="light_datepick" />
            </div>
                <ul class="list-group">
                    @foreach (var citum in Model)
                    {
                        <li class="list-group-item align-items-center d-flex">
                            <div class="media">
                                <img src="~/images/widgets/project1.jpg" class="me-3 thumb-sm align-self-center rounded-circle" alt="...">
                                <div class="media-body align-self-center">
                                    <h5 class="m-0 font-13">Cita, Descripcion de la cita: @citum.Descripcion</h5>
                                    <p class="text-muted mb-0">@citum.FechaHora</p>
                                </div><!--end media body-->
                            </div>
                        </li>
                    }
                </ul>
        </div><!--end col-->
        </div><!--end col-->
    </div><!--end col-->
        

</div><!-- container -->
@section styles{
    <!--calendar css-->
    <link href="~/lib/fullcalendar/packages/core/main.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/packages/daygrid/main.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/packages/bootstrap/main.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/packages/timegrid/main.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/packages/list/main.css" rel="stylesheet" />
    <link href="~/lib/lightpick/lightpick.css" rel="stylesheet" />
}

@section scripts{
    <script src='~/lib/fullcalendar/packages/core/main.js'></script>
    <script src='~/lib/fullcalendar/packages/daygrid/main.js'></script>
    <script src='~/lib/fullcalendar/packages/timegrid/main.js'></script>
    <script src='~/lib/fullcalendar/packages/interaction/main.js'></script>
    <script src='~/lib/fullcalendar/packages/list/main.js'></script>
    <script src="~/lib/lightpick/lightpick.js"></script>
    <script src='~/js/pages/jquery.calendar.js'></script>
}
